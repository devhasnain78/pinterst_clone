<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-xl">Create a new post</h1>
        <hr class="opacity-10 mt-3">
        <div>
            <form action="/createpost" method="post" enctype="multipart/form-data" >
                <input class="text-black block mt-5 px-3 py-2" type="file" name="postimage">
                <input class="text-black block mt-5 px-3 py-2 border-2 w-1/3 rounded-md" type="text" placeholder="Title" name="title">
                <textarea class="text-black block mt-5 px-3 py-2 border-2 w-1/3 rounded-md" placeholder="Description" name="description"></textarea>
                <input class="text-white block mt-5 px-3 py-2  w-1/3 bg-red-700 rounded-md" type="submit" value="Submit">
            </form>
        </div>
    </div>
    <% include ./partials/footer.ejs %>