<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
<div class="cards flex flex-wrap gap-10">
    <!-- <h3 class="text-xl font-semibold mt-3">Your uploaded pins (<%= user.posts.length %>)</h3> -->
      <% if (user.posts.length > 0) { %>
        <% user.posts.forEach(function(post) { %>
          <div class="card w-32">
            <div >
                <img class="w-full h-full object-cover overflow-hidden bg-sky-200 rounded-lg" src="/images/uploads/<%= post.image %>" alt="">
          </div>
          <h5 class="mt-2 text-sm text-center capitalize"><%= post.title  %></h5>
          </div>
        <% }) %>
        
      <% } else { %>
        <p>No posts available.</p>
      <% } %>
    </div>
    
  </div>
  <% include ./partials/footer.ejs %>